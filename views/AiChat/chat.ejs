<body style="background-color: #1b1d1c;">
                    <nav class="navbar ">
                        <form class="container-fluid justify-content-start">
                          <a href="/journal" class="btn offset-sm-2 btn-sm btn-outline-success" type="button"><i class="fa-solid fa-arrow-left-long"></i></a> &nbsp;&nbsp;
                          <h5>New entry</h5>
                        </form>
                      </nav>
               
        <div class="container">
            <div class="col-md-8 offset-md-2 chat-container">
                <div class="chat-header">
                    <h1>Reflection Guide</h1>
                    <p>Your go-to for deep talks and self-discovery. Think of a journaling buddy who's all about understanding your inner world.</p>
                </div>
                <div class="chat-messages" id="chat-messages">
                    <!-- Messages will be appended here -->
                    <% if (initialMessage) { %>
                        <div class="message chatbot-message"><%= initialMessage %></div>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8 offset-md-2 chat-input">
                <input type="text" id="user-input" placeholder="Write...">
                <button id="send-btn"><i class="fa-regular fa-paper-plane"></i></button>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

       

        $(document).ready(function () {
            $('#send-btn').click(function () {
                var userInput = $('#user-input').val();
                $('#chat-messages').append('<div class="message user-message">' + userInput + '</div>');
                $('#user-input').val('');

                // Send the user message to the server
                $.ajax({
                    url: '/send-message',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ message: userInput }),
                    success: function (response) {
                        var chatbotResponse = response.message;
                        $('#chat-messages').append('<div class="message chatbot-message">' + chatbotResponse + '</div></div> <br></br>');
                    },
                    error: function () {
                        $('#chat-messages').append('<div class="message chatbot-message">Error processing message</div>');
                    }
                });
            });
        });
    </script>
</body>
</html>
